270  PRINT "TO ANOTHER CONVERSION"
280  PRINT : INPUT "SELECT CONVERSION REQUIRED 1-16 ";D
290  IF D = 999  THEN  GOTO 1680
300  ON D GOTO 310,420,510,580,660,740,820,890,970,1060,1220,1290,1380,1450,1540,1610
