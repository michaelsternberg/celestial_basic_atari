320  PRINT 
330  PRINT "KM TO MI CONVERSION"
340  PRINT "TO STOP ENTER 999"
350  PRINT : INPUT "KM ";X
360  IF X = 999  THEN  GOTO 110
370 Y = X *(1/1.60934)
380  PRINT "MI = ";Y
390  PRINT : GOTO 350
400  GOTO 130
410  IF X = 999  THEN  GOTO 110
420  CLS : PRINT 
430  PRINT "MI TO KM CONVERSION"
440  PRINT "TO STOP ENTER 999"
450  PRINT : INPUT "MI ";X
460  IF X = 999  THEN  GOTO 110
470 Y = X *1.609344
480  PRINT "KM = ";Y
490  GOTO 450
500  GOTO 10
510  CLS : PRINT 
520  PRINT "LY TO TRILLION MI CONVERSION"
530  PRINT : INPUT "LY ";X
540  IF X = 999  THEN  GOTO 110
550 Y = X *5.88
560  PRINT "TRILLION MI = "; LEFT$( STR$(Y),5)
570  GOTO 530
