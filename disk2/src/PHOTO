420  PRINT "    OF TELESCOPE INTO CAMERA"
430  PRINT "    WITHOUT A CAMERA LENS"
440  PRINT : PRINT 
450  INPUT "SELECT 1, 2, OR 3 ";A
460  CLS : PRINT : PRINT 
470  PRINT "GIVE FOLLOWING DATA "
480  PRINT 
490  INPUT "CLEAR APERTURE OF OBJECTIVE (IN) ";AO
500 AO = AO *25.4
510  PRINT 
520  INPUT "FOCAL LENGTH OF OBJECTIVE (IN) ";FO
530 FO = FO *25.4
540 NF = FO/AO
550  IF A < >2  THEN  GOTO 580
560  PRINT 
570  INPUT "FOCAL LENGTH OF CAMERA LENS (MM) ";FC
580  IF A = 1  THEN  GOTO 670
590  PRINT 
600  INPUT "FOCAL LENGTH OF EYEPIECE (MM) ";FE
610  IF A = 1  THEN  GOTO 670
620  IF A = 2  THEN  GOTO 670
630  PRINT 
640  INPUT "DISTANCE EYEPIECE TO FILM PLANE (IN) ";DE
650 DE = DE *25.4
660  REM  CALC. EFFECTIVE F NUMBER
670  IF A = 1  THEN EFL = NF
680  IF A = 2  THEN EFL = NF *FC/FE: GOTO 700
690  IF A = 3  THEN EFL = (DE -1)/FE *NF
700  CLS : PRINT : PRINT 
710  PRINT "YOU MUST NOW ENTER THE NAME OF"
720  PRINT "THE PLANET YOU ARE PHOTOGRAPHING"
730  PRINT "AND ITS DIAMETER IN ARCSECS"
740  PRINT 
