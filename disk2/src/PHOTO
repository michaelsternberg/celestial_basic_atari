800  PRINT 
810  INPUT "WHAT IS DIAMETER IN ARCSECS ";DP
820 F = EFL *AO
830  CLS : PRINT : PRINT : PRINT 
840 DP = DP/3600
850 DP =  TAN(DP/57.29578)
860 I = F *DP
870 R = 1450/EFL
880 R =  VAL( LEFT$( STR$(R),4))
